<EmuInterface>:
    screen_manager:screen_manager
    emulator_screen:emulator_screen
    Image:
        source: './assets/android_lolipop1.png'
        pos_hint: {'center_x': 0.5, 'center_y': 0.46}

    BoxLayout:
        orientation: "vertical"
        MDToolbar:
            id: toolbar
            title: 'KivyEmu'
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            elevation: 10
            right_action_items:
                [['menu', lambda x:app.show_example_bottom_sheet()]]
        BoxLayout:
            id: box_man
            FloatLayout
                BoxLayout:
                    size_hint: .926,.8325
                    pos_hint: {'center_x': 0.5, 'center_y': 0.525}
                    ScreenManager:
                        id:screen_manager
                        EmulatorScreen:
                            id: emulator_screen
                            name: "emulator_screen"
                        HistoryScreen:
                            id: history_screen
                            name: "history_screen"
